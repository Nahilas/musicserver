doctype html5

html

	head
		title MusicPlayer
		link(type="text/css",rel="stylesheet",href="styles/bootstrap.min.css")
		link(type="text/css",rel="stylesheet",href="styles/main.css")

	body
		nav.navbar.navbar-default.navbar-fixed-top
			.navbar-header
				.a.navbar-brand(href="#", id="home") MusicPlayer

			div.navbar-form.navbar-left
				button(type="button").btn.btn-default#up Up

			form.navbar-form.navbar-right
				.form-group
					input.form-control(type="text", placeholder="Search")
				button(type="submit").btn.btn-default Search

		ul#list
		div#playlist
			table.table.table-hover.table-condensed
				thead
					tr
						th Title
						th Album
						th Artist
						th Duration
				tbody


		div#player
			.row
				.col-md-6.col-md-offset-3
					.btn-group
						.btn.btn-default#prev Previous
						.btn.btn-default#pause Pause
						.btn.btn-default#next Next

					p &nbsp;
					.pull-left#position 0:00
					.pull-right#duration 0:00
					.progress(style="margin: auto; width: 80%")
						.progress-bar.progress-bar-info(style="width: 0%")

					.text-center
						h3#song 
						h4#artist
						h5#album 
			
			.jplayer


		script(type="text/javascript", src="scripts/jquery.2.0.3.min.js")
		script(type="text/javascript", src="scripts/jQuery.jPlayer.2.5.0/jquery.jplayer.min.js")
		script(type="text/javascript", src="scripts/moment.js")
		script(type="text/javascript", src="scripts/main.js")
